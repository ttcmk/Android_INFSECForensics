<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <Button
        android:id="@+id/Button02"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Button01"
        android:layout_marginRight="20dp"
        android:layout_marginTop="64dp"
        android:layout_toLeftOf="@+id/Button04"
        android:text="@string/button_4" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/Button02"
        android:layout_alignBottom="@+id/Button02"
        android:layout_alignLeft="@+id/Button03"
        android:text="@string/button_2" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Button01"
        android:layout_marginRight="48dp"
        android:text="@string/button_3" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/Button02"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:text="@string/button_1" />

    <Button
        android:id="@+id/Button_View"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_above="@+id/Button03"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="@string/button_view" />

</RelativeLayout>